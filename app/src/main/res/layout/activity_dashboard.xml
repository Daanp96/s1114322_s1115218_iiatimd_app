<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="286dp"
        android:layout_height="153dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/toRecipes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonToFood"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/rokkitt"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:textSize="24sp"
        android:textColor="#fff"
        app:layout_constraintBottom_toTopOf="@+id/toIngredients"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/toIngredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonToIngredients"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/rokkitt"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:textSize="24sp"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/toCookpot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonToCookpot"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/rokkitt"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:textSize="24sp"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toIngredients" />

</androidx.constraintlayout.widget.ConstraintLayout>