<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/main_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="2dp" />

    <TextView
        android:id="@+id/main_name"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@id/main_image"
        android:layout_toRightOf="@id/main_image"
        android:text="Name"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/main_subclass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:text="Subclass"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/main_effect"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_toEndOf="@id/main_image"
        android:layout_toRightOf="@id/main_image"
        android:layout_below="@id/main_name"
        android:paddingBottom="5dp"
        android:text="Effect"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/main_description"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_effect"
        android:layout_toEndOf="@id/main_image"
        android:layout_toRightOf="@id/main_image"
        android:text="Description"
        android:textSize="18sp" />


</RelativeLayout>